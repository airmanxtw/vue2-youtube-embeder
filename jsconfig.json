{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "include": [
      "./src/**/*",
      "./tests/**/*",
    ],
    "exclude": [
      "dist",
      "node_modules",
      "build",
      ".vscode",
      ".nuxt",
      "coverage",
      "jspm_packages",
      "tmp",
      "temp",
      "bower_components",
      ".npm",
      ".yarn"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  }
}
